<%= error_messages_for :user %>

<% form_for(@user, :html => {:multipart => true}) do |f| %>
  <p>
    <b>Nome</b><br />
    <%= f.text_field :name, :size => 60 %>
  </p>

  <p>
    <b>E-mail</b><br />
    <%= f.text_field :email, :size => 40 %>
  </p>

  <p>
    <b>Senha</b><br />
    <%= f.password_field :password, :size => 15 %>
  </p>

  <p>
    <b>Confirmação de senha</b><br />
    <%= f.password_field :password_confirmation, :size => 15 %>
  </p>

  <p>
    <b>Comentários</b><br />
    <%= f.text_area :comment, :rows => 5, :cols => 60 %>
  </p>

  <p>
    <b>Imagem</b><br />
    <%= f.file_field :file %>
  </p>

  <p>
    <%= f.submit "Salvar" %>
  </p>
<% end %>

<% content_for :side do %>
	<%= render_formatting_help %>
<% end %>